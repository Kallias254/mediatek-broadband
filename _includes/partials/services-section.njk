
<div class="untree_co-section bg-light" id="services-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 text-center mb-5">
        <h2 class="heading" data-aos="fade-up" data-aos-delay="0">{{ services.title }}</h2>
        <p data-aos="fade-up" data-aos-delay="100">{{ services.description }}</p>
      </div>
    </div>
    <div class="row justify-content-between">
      <div class="col-lg-5 order-lg-2 js-custom-dots">
        {% for service in services.services %}
        <a href="#" class="service link horizontal d-flex active" data-aos="fade-left" data-aos-delay="{{ loop.index0 * 100 }}">
          <div class="service-icon color-{{ loop.index }} mb-4">
            <svg class="{{ service.icon }}" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M5.5 2A3.5 3.5 0 0 0 2 5.5v5A3.5 3.5 0 0 0 5.5 14h5a3.5 3.5 0 0 0 3.5-3.5V8a.5.5 0 0 1 1 0v2.5a4.5 4.5 0 0 1-4.5 4.5h-5A4.5 4.5 0 0 1 1 10.5v-5A4.5 4.5 0 0 1 5.5 1H8a.5.5 0 0 1 0 1H5.5z"/>
              <path d="M16 3a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
            </svg>
          </div>
          <div class="service-contents">
            <h3>{{ service.title }}</h3>
            <p>{{ service.description }}</p>
          </div>
        </a>
        {% endfor %}
      </div>
      <div class="col-lg-7">
        <div class="img-shadow">
          <div class="owl-single no-dots owl-carousel">
            {% for image in services.carouselImages %}
            <div class="item">
              <img src="{{ image }}" alt="Image" class="img-fluid">
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
