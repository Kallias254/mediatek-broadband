<div class="untree_co-section" id="coverage-section">
  <div class="container">
      <div class="row justify-content-between">
          <div class="col-lg-4">
              <h2 class="heading mb-4" data-aos="fade-up" data-aos-delay="0">{{ coverage.title }}</h2>
              <p data-aos="fade-up" data-aos-delay="100">{{ coverage.description }}</p>
              <ul class="list-unstyled ul-check primary" data-aos="fade-up" data-aos-delay="200">
                  {% for area in coverage.areas %}
                      <li>{{ area }}</li>
                  {% endfor %}
              </ul>
          </div>
          <div class="col-lg-7" data-aos="fade-up" data-aos-delay="300">
              <img src="{{ coverage.image }}" alt="Coverage Map" class="img-fluid img-shadow">
          </div>
      </div>
  </div>
</div>

